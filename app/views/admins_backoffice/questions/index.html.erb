<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>#</th>
              <th>Questões</th>
              <th>Assuntos/Áreas</th>
              <th>
                <p><%= link_to 'New Question', new_admins_backoffice_question_path %></p>
                  <i class="fa fa-plus"></i>
              </th>
          </tr>
      </thead>
      <tbody>
          <% @questions.each do |question| %>
          <tr>
              <td><%= question.id %></td>
              <td><%= sanitize question.description.truncate(110) %></td>
              <td><%= question.subject.description.truncate(50) %></td>
              <td style="width: 100px">

                  <%= link_to "Edit", edit_admins_backoffice_question_path(question.id) %>
                  <i class="fa fa-edit"></i>

                <%= button_to "Delete", admins_backoffice_question_path(question.id), method: :delete, data: { confirm: 'Are you sure ?' } %>
                  <i class="fa fa-minus"></i>

              </td>
          </tr>
          <% end %>
      </tbody>
  </table>

  <div class="text-center">
    <%= paginate @questions %>
  </div>
</div>
