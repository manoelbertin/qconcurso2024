<h1>EDITANDO</h1>
<%#= @admin.inspect %>

<%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
                        
  <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, 
                class:"form-control", 
              placeholder: 'placeholder.admin_email'  %>
  </div>
  
  <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, 
                class:"form-control", 
                placeholder: 'placeholder.admin_password'  %>
  </div>

  <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, 
                class:"form-control", 
                placeholder: 'placeholder.admin_password_confirmation'  %>
  </div>

  <button type="submit" class="btn btn-default">
    <%= 'button.save' %>
  </button>
<% end %>
